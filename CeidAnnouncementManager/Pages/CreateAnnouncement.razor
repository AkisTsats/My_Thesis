@page "/createannouncement"

@using DTOs.Data;

<MudText Typo="Typo.h3">CreateAnnouncement</MudText>

<MudGrid>
    <MudItem xs="12" sm="7">
        <MudPaper Class="pa-4">
            <MudForm>
                    <MudTextField T="string" Label="Title" Required="true"/>
                    <MudTextField T="string" Label="Abstract" Required="true"/>
                    <MudTextField T="string" Label="Password" HelperText="Choose a strong password"/>
                    <div class="d-flex">
                        <MudRadioGroup T="string" Required="true" RequiredError="Account type is required!">
                            <MudRadio Option="@("Personal")">Personal</MudRadio>
                        </MudRadioGroup>
                    </div>
                    <div class="d-flex align-center justify-space-between mt-6">
                        <MudCheckBox T="bool" Required="true" RequiredError="You must agree" Class="ml-n2" Label="I agree!"/>
                        <MudButton Variant="Variant.Filled" Color="Color.Primary"  Class="ml-auto">Register</MudButton>
                    </div>
            </MudForm>   
        </MudPaper>
        
    </MudItem>
</MudGrid>


